<div class="row">
	<div class="col-md-12">
		<div class="col-md-2">
			<div class="thumbnail">
				<img src="http://imageshack.com/a/img923/5504/t6cyGr.jpg" alt="avatar">
			</div>
		</div>
		<div class="col-md-10">
			<h2><strong>User: </strong><%= @state.user.email %></h2>
			<p>Published at <%= time_ago_in_words(@state.created_at) %> ago.</p>
		</div>
	</div>
	<div class="canletrai"><strong>State: </strong>
		<%= @state.content %>
	</div>
	<div class="comment">
		<h2>Comment</h2>
		<h4>Số lượng comment: <%= @state.comments.count %></h4>
		<%= render @state.comments %>
		<%= render 'comments/form' %>
	</div>
</div>
<br>
<div class="taobutton">
<%= link_to 'Back', root_path %>
</div>



